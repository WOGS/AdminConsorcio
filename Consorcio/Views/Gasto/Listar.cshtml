@model IEnumerable<ServicioNegocio.EF.Gasto>

@{
    
    Layout = "~/Views/Shared/_LayoutGeneral.cshtml";
    ViewBag.Title = "Lista Gastos";
    int pagina = 1;
    int i = 0;
}


<section id="listado" class="ta-c">
    <div class="container">
        <div class="row">
            <div class="col-lg-12 mx-auto">
                <h2>Listado de Gastos</h2>

                <br>
                <div class="box-form">
                    <table class="table table-hover">
                        <thead>
                            <tr>

                                <th scope="col">@Html.DisplayNameFor(model => model.AnioExpensa)</th>
                                <th scope="col">@Html.DisplayNameFor(model => model.MesExpensa)</th>
                                <th scope="col">@Html.DisplayNameFor(model => model.Nombre)</th>
                                <th scope="col">@Html.DisplayNameFor(model => model.TipoGasto.Nombre)</th>
                                <th scope="col">@Html.DisplayNameFor(model => model.FechaGasto)</th>
                                <th scope="col">@Html.DisplayNameFor(model => model.Monto)</th>
                                <th scope="col">@Html.DisplayNameFor(model => model.ArchivoComprobante)</th>
                                <th scope="col">Eliminar</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td><a href="../ViewEditar/@item.IdGasto">@Html.DisplayFor(modelItem => item.AnioExpensa)</a></td>
                                    <td>@Html.DisplayFor(modelItem => item.MesExpensa)</td>
                                    <td>@Html.DisplayFor(modelItem => item.Nombre)</td>
                                    <td>@Html.DisplayFor(modelItem => item.TipoGasto.Nombre)</td>
                                    <td>@Html.DisplayFor(modelItem => item.FechaGasto)</td>
                                    <td>@Html.DisplayFor(modelItem => item.Monto)</td>
                                    <td><a href="../VerComprobanteDesdeListar/@item.IdGasto" target="_blank"><i class="fas fa-file-download"></i></a></td>
                                    <th scope="row"> <a href="../ViewEliminarGasto/@item.IdGasto"><i class="fas fa-times-circle"></i></a></th>

                                </tr>
                            }
                        </tbody>
                    </table>
                    <nav aria-label="Page navigation example">
                        <ul class="pagination justify-content-center">
                            @{int j = 0;
                                if (j == 0)
                                {
                                    <li class="page-item disabled">
                                        <a class="page-link" href="#" tabindex="-1">Previous</a>
                                    </li>
                                }
                            }

                            @for (i = 0; i < ViewBag.TotalRegistros; i += 4)
                            {
                                <li class="page-link">
                                    @Html.ActionLink(pagina++.ToString(), "Listar", "Gasto", new { posicion = i }, null)
                                </li>
                            }

                            @{
                                if (i == (ViewBag.TotalRegistros - 4))
                                {
                                    <li class="page-item disabled">
                                        <a class="page-link" href="#">Next</a>
                                    </li>
                                }
                                else
                                {
                                    <li class="page-item">
                                        <a class="page-link" href="#">Next</a>
                                    </li>
                                }
                            }

                        </ul>
                    </nav>
                    <br>
                    <div class="row">
                        <div class="col-3 offset-9">
                            <a class="btn btn-primary" href="/Gasto/ViewCrear">Nuevo Gasto </a>
                        </div>
                    </div>
                </div>

            </div>
        </div>
    </div>
</section>