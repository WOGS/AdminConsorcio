@model Consorcio.Models.ConsorcioModel

@{ Layout = "~/Views/Shared/_LayoutGeneral.cshtml";

    List<ServicioNegocio.EF.Provincia> provincias = ViewBag.provincias as List<ServicioNegocio.EF.Provincia>;

    List<SelectListItem> provinciaItems = provincias.Select(o => new SelectListItem()
    {
        Text = o.Nombre,
        Value = o.IdProvincia.ToString()
    }).ToList();
    provinciaItems.Insert(0, new SelectListItem() { Value = "", Text = "Seleccione Provincia" });
}

<section class="d-flex align-items-center" id="registration-form">
    <div class="container ">
        <div class="row ">
            <div class="col text-center box-form">
                <h2>Nuevo Consorcio</h2><br>
                <div class="container" id="registration-form">
                    <div class="image"></div>
                    <div class="frm">
                        <form action="Guardar" method="post">
                            <div class="form-group text-black-75 text-left">
                                <label for="Nombre">Nombre:</label><br />
                                @Html.EditorFor(Model => Model.Nombre)
                                <div class="form-group text-danger">
                                    @Html.ValidationMessageFor(Model => Model.Nombre)
                                </div>
                            </div>
                            <div class="form-group text-black-75 text-left">
                                <label for="pwd">Provincia:</label>
                                @Html.DropDownListFor(Model => Model.idProvincia, provinciaItems)
                                <div class="form-group text-danger">
                                    @Html.ValidationMessageFor(Model => Model.idProvincia)
                                </div>
                                <input type="hidden" name="IdProvincia" value="@Html.DisplayFor(model => model.idProvincia)">
                            </div>
                            <div class="form-group text-black-75 text-left">
                                <label for="Ciudad">Ciudad:</label><br />
                                @Html.EditorFor(Model => Model.Ciudad)
                                <div class="form-group text-danger">
                                    @Html.ValidationMessageFor(Model => Model.Ciudad)
                                </div>
                            </div>
                            <div class="form-group text-black-75 text-left">
                                <label for="Calle">Calle:</label><br />
                                @Html.EditorFor(Model => Model.Calle)
                                <div class="form-group text-danger">
                                    @Html.ValidationMessageFor(Model => Model.Calle)
                                </div>
                            </div>
                            <div class="form-group text-black-75 text-left">
                                <label for="Altura">Altura:</label><br />
                                @Html.EditorFor(Model => Model.Altura)
                                <div class="form-group text-danger">
                                    @Html.ValidationMessageFor(Model => Model.Altura)
                                </div>
                            </div>
                            <div class="form-group text-black-75 text-left">
                                <label for="DiaVencimiento">Dia de Vencimiento :</label><br />
                                @Html.EditorFor(Model => Model.DiaVencimientoExpensas)
                                <div class="form-group text-danger">
                                    @Html.ValidationMessageFor(Model => Model.DiaVencimientoExpensas)
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-10 text-right">
                                    <button type="submit" class="btn btn-primary btnForm" name="accion" value="Guardar">Guardar</button>
                                    <button type="submit" class="btn btn-primary btnForm" name="accion" value="GuardarCrear">Guardar y crear otro</button>
                                    <button type="submit" class="btn btn-primary btnForm" name="accion" value="GuardarCrearUnidad">Guardar y crear Unidad</button>
                                    <button type="button" class="btn btn-primary btnForm">
                                        <a class="" type="" href="../Consorcio/Listar">Cancelar</a>
                                    </button>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

