@model IEnumerable<ServicioNegocio.EF.Gasto>

@{
    
    Layout = "~/Views/Shared/_LayoutGeneral.cshtml";
}

<h2>ViewListar</h2>

<section id="listado" class="ta-c">
    <div class="container">
        <div class="row">
            <div class="col-12">
                <nav aria-label="breadcrumb">
                    <ol class="breadcrumb">
                        <li class="breadcrumb-item"><a href="index.html">Mis Consorcios</a></li>
                        <li class="breadcrumb-item"><a href="#">Consorcio 'Edificio Godoy Cruz'</a></li>
                        <li class="breadcrumb-item active" aria-current="page">Gastos</li>
                    </ol>
                </nav>
            </div>
        </div>
        <div class="row">
            <div class="col-lg-12 mx-auto">
                <h2>Listado de Gastos</h2>

                <br>
                <div class="box-form">
                    <table class="table table-hover">
                        <thead>
                            <tr>

                                <th scope="col">@Html.DisplayNameFor(model => model.AnioExpensa)</th>
                                <th scope="col">@Html.DisplayNameFor(model => model.MesExpensa)</th>
                                <th scope="col">@Html.DisplayNameFor(model => model.Nombre)</th>
                                <th scope="col">@Html.DisplayNameFor(model => model.TipoGasto.Nombre)</th>
                                <th scope="col">@Html.DisplayNameFor(model => model.FechaGasto)</th>
                                <th scope="col">@Html.DisplayNameFor(model => model.Monto)</th>
                                <th scope="col">@Html.DisplayNameFor(model => model.ArchivoComprobante)</th>
                                <th scope="col">Eliminar</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td><a href="../ViewEditar/@item.IdGasto">@Html.DisplayFor(modelItem => item.AnioExpensa)</a></td>
                                    <td>@Html.DisplayFor(modelItem => item.MesExpensa)</td>
                                    <td>@Html.DisplayFor(modelItem => item.Nombre)</td>
                                    <td>@Html.DisplayFor(modelItem => item.TipoGasto.Nombre)</td>
                                    <td>@Html.DisplayFor(modelItem => item.FechaGasto)</td>
                                    <td>@Html.DisplayFor(modelItem => item.Monto)</td>
                                    <td><a href="../VerComprobanteDesdeListar/@item.IdGasto" target="_blank"><i class="fas fa-file-download"></i></a></td>
                                    <th scope="row"> <a><i class="fas fa-times-circle"></i></a></th>

                                </tr>
                            }
                        </tbody>
                    </table>
                    <nav aria-label="Page navigation example">
                        <ul class="pagination justify-content-center">
                            <li class="page-item disabled">
                                <a class="page-link" href="#" tabindex="-1">Previous</a>
                            </li>
                            <li class="page-item"><a class="page-link" href="#">1</a></li>
                            <li class="page-item"><a class="page-link" href="#">2</a></li>
                            <li class="page-item"><a class="page-link" href="#">3</a></li>
                            <li class="page-item">
                                <a class="page-link" href="#">Next</a>
                            </li>
                        </ul>
                    </nav>
                    <br>
                    <div class="row">
                        <div class="col-3 offset-9">
                            <a class="btn btn-primary" href="/Gasto/ViewCrear">Nuevo Gasto </a>
                        </div>
                    </div>
                </div>

            </div>
        </div>
    </div>
</section>